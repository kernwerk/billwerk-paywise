PORT=3000

# Billwerk (Frisbii Transform)
BILLWERK_BASE_URL=https://app.billwerk.com
BILLWERK_CLIENT_ID=your_billwerk_client_id
BILLWERK_CLIENT_SECRET=your_billwerk_client_secret

# Paywise Case Management API
PAYWISE_BASE_URL=https://api.paywise.de
PAYWISE_TOKEN=your_paywise_bearer_token

# Optional security for the webhook endpoint
WEBHOOK_SHARED_SECRET=change_me

# Optional defaults
## Comma-separated list of trigger days that should be processed (e.g. "5,30").
BILLWERK_TRIGGER_DAYS=30
BILLWERK_DUNNING_TRIGGER_DAYS=22
BILLWERK_DUNNING_TEMPLATE_ID=
BILLWERK_DUNNING_TAKE=25
PAYWISE_STARTING_APPROACH=extrajudicial
PAYWISE_DEFAULT_CURRENCY=EUR

# LetterXpress API (v3)
LETTERXPRESS_BASE_URL=https://api.letterxpress.de
LETTERXPRESS_USERNAME=your_letterxpress_username
LETTERXPRESS_API_KEY=your_letterxpress_api_key
LETTERXPRESS_MODE=test
LETTERXPRESS_COLOR=1
LETTERXPRESS_PRINT_MODE=simplex
LETTERXPRESS_SHIPPING=national
LETTERXPRESS_C4=0
